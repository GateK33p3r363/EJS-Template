<!-- views/inventory/management.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Management</title>
</head>
<body>
    <h1>Inventory Management</h1>
    
    <!-- Display flash messages -->
    <% if (typeof flash !== 'undefined' && flash.length > 0) { %>
        <div class="flash-messages">
            <% flash.forEach(function(message) { %>
                <div class="flash-message"><%= message %></div>
            <% }); %>
        </div>
    <% } %>

    <!-- Greet the user based on account type -->
    <% if (accountType === 'Client') { %>
        <h2>Welcome <%= firstName %></h2>
    <% } else if (accountType === 'Employee' || accountType === 'Admin') { %>
        <h2>Welcome <%= firstName %></h2>
        <h3>Inventory Management</h3>
        <p><a href="/inventory/management">Manage Inventory</a></p>
    <% } %>

    <!-- Link to update account information -->
    <p><a href="/accounts/update/<%= accountId %>">Update Account Information</a></p>

    <!-- Links to trigger processes -->
    <div>
        <!-- Link to add new classification -->
        <a href="/inventory/add-classification">Add New Classification</a>

        <!-- Link to add new inventory -->
        <a href="/inventory/add-inventory">Add New Inventory</a>
    </div>
</body>
</html>

<!-- END OF LINE -->